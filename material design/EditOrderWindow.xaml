<Window x:Class="material_design.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа" Height="400" Width="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Клиент:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" Name="cmbClient" DisplayMemberPath="name_client" 
                  SelectedValuePath="id_client" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Сотрудник:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="3" Name="cmbEmployee" DisplayMemberPath="name_employee" 
                  SelectedValuePath="id_employee" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Дата заказа:" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="5" Name="dpDate" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Text="Время заказа:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="7" Name="txtTime" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Text="Общая сумма:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="9" Name="txtTotal" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>