<Window x:Class="material_design.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Отчеты и аналитика" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Отчеты и аналитика" 
                  FontSize="20" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Выбор отчета -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox Name="cbReportType" Width="250" Margin="0,0,20,0">
                <ComboBoxItem Content="Отчет по продажам за период"/>
                <ComboBoxItem Content="Эффективность сотрудников"/>
                <ComboBoxItem Content="Анализ клиентской базы"/>
                <ComboBoxItem Content="Популярность меню"/>
                <ComboBoxItem Content="Финансовый отчет"/>
            </ComboBox>

            <DatePicker Name="dpStartDate" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="по" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Name="dpEndDate" Width="120"/>

            <Button Content="Сформировать" Click="GenerateReport_Click" 
                   Margin="20,0,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Результаты отчета -->
        <DataGrid Grid.Row="2" Name="dgReport" 
                 AutoGenerateColumns="True"
                 CanUserAddRows="False"
                 IsReadOnly="True"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Экспорт в CSV" Click="ExportCsv_Click" 
           Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Экспорт в Excel" Click="ExportExcel_Click" 
           Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Печать" Click="PrintReport_Click" 
           Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Главное меню" Click="MainMenu_Click" 
           Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>