<Window x:Class="material_design.filtering"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фильтрация" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox Name="cbP" 
                     Width="200" 
                     Margin="0,0,20,0"
                     SelectionChanged="cbP_SelectionChanged">
                
            </ComboBox>

            <TextBox Name="tbN" 
                    Width="200"
                    Text="Поиск по имени"
                    Foreground="Gray"
                    GotFocus="SearchBox_GotFocus"
                    LostFocus="SearchBox_LostFocus"
                    TextChanged="tbN_TextChanged"/>
        </StackPanel>

        <!-- Таблица -->
        <DataGrid Grid.Row="1" Name="dgP" 
                 AutoGenerateColumns="False" 
                 Height="250"
                 HeadersVisibility="Column"
                 CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id_employee}" Width="Auto"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding name_employee}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding ph_number_emp}" Width="Auto"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding title_post}" Width="Auto"/>
            
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <!-- Колонки будут добавлены в коде -->
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отчет" 
                    Click="Button_Click" 
                    Margin="0,0,10,0"
                    Width="100" Height="30"
                    Background="#FF3F51B5" Foreground="White"/>

            <Button Content="Назад"
                    Click="Button_Click_1"
                    Width="100" Height="30"
                    BorderBrush="#FF3F51B5" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>