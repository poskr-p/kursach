<Window x:Class="material_design.MainDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления кафе-баром 'Удача'" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF3F51B5" Padding="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🏆" FontSize="28" Margin="0,0,15,0" Foreground="White"/>
                <StackPanel>
                    <TextBlock Text="СИСТЕМА УПРАВЛЕНИЯ" 
                              FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Кафе-бар 'Удача'" 
                              FontSize="16" Foreground="White" Opacity="0.9"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Модули системы -->
            <Border Grid.Row="0" Grid.Column="0" Margin="10" 
                   Background="White" CornerRadius="8" 
                   BorderBrush="#FFE0E0E0" BorderThickness="1"
                   MouseDown="Module_MouseDown">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="👥" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Управление персоналом" 
                              FontSize="16" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Сотрудники, должности, графики" 
                              FontSize="12" HorizontalAlignment="Center" 
                              TextAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Margin="10" 
                   Background="White" CornerRadius="8" 
                   BorderBrush="#FFE0E0E0" BorderThickness="1"
                   MouseDown="Module_MouseDown">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📋" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Просмотр таблиц" 
                              FontSize="16" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Все таблицы базы данных" 
                              FontSize="12" HorizontalAlignment="Center" 
                              TextAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Margin="10" 
                   Background="White" CornerRadius="8" 
                   BorderBrush="#FFE0E0E0" BorderThickness="1"
                   MouseDown="Module_MouseDown">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="🔍" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Фильтрация и поиск" 
                              FontSize="16" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Поиск по сотрудникам и клиентам" 
                              FontSize="12" HorizontalAlignment="Center" 
                              TextAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Margin="10" 
                   Background="White" CornerRadius="8" 
                   BorderBrush="#FFE0E0E0" BorderThickness="1"
                   MouseDown="Module_MouseDown">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📊" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Отчеты и аналитика" 
                              FontSize="16" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Генерация отчетов" 
                              FontSize="12" HorizontalAlignment="Center" 
                              TextAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Выйти из системы" 
                       Click="LogoutButton_Click"
                       Padding="10,5" 
                       Background="Transparent" 
                       BorderBrush="#FF3F51B5" 
                       Foreground="#FF3F51B5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>