<Window x:Class="material_design.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поля ввода -->
        <TextBox Grid.Row="0" Name="tbId"
                 Tag="ID"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Margin="0,0,0,15"
                 Padding="5" FontSize="14"/>

        <TextBox Grid.Row="1" Name="tbName"
                 Tag="Имя"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Margin="0,0,0,15"
                 Padding="5" FontSize="14"/>

        <TextBox Grid.Row="2" Name="tbPhone"
                 Tag="Телефон"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Margin="0,0,0,15"
                 Padding="5" FontSize="14"/>

        <TextBox Grid.Row="3" Name="tbPost"
                 Tag="Должность"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Margin="0,0,0,15"
                 Padding="5" FontSize="14"/>

        <TextBox Grid.Row="4" Name="tbEmail"
                 Tag="Email"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Margin="0,0,0,25"
                 Padding="5" FontSize="14"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Click="ButtonSave_Click"
                    Margin="0,0,10,0"
                    Width="100" Height="30"
                    Background="#FF3F51B5" Foreground="White"/>

            <Button Content="Отмена"
                    Click="ButtonCancel_Click"
                    Width="100" Height="30"
                    BorderBrush="#FF3F51B5" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>