<Window x:Class="material_design.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр таблиц" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Выбор таблицы -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ComboBox x:Name="cbTables" Width="200" Margin="0,0,10,10"
                      SelectionChanged="cbTables_SelectionChanged"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  MouseDoubleClick="dataGrid_MouseDoubleClick"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Click="AddButton_Click" Margin="5" Width="100"/>
            <Button Content="Удалить" Click="DeleteButton_Click" Margin="5" Width="100"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5" Width="100"/>
            <Button Content="Обновить" Click="RefreshButton_Click" Margin="5" Width="100"/>
            <Button Content="Главное меню" Click="MainMenuButton_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>